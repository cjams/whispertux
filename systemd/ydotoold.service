[Unit]
Description=Generic input server and automation daemon for ydotool
Documentation=man:ydotoold(1)
After=multi-user.target
Wants=multi-user.target

[Service]
Type=simple
ExecStart=/usr/local/bin/ydotoold-wrapper.sh
Restart=on-failure
RestartSec=1
TimeoutStopSec=10
User=root
Group=input

[Install]
WantedBy=multi-user.target
